<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/main_card_width"
    android:layout_height="@dimen/main_card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    card_view:cardCornerRadius="4dp"
    tools:context="${relativePackage}.${activityClass}">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/card_view_image"
            style="@style/cardImagePadding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_img_height"
            android:background="#00000000"
            android:contentDescription="@string/video_img"
            android:scaleType="centerCrop"
            tools:src="@mipmap/bilibili_test"/>

        <TextView
            android:id="@+id/card_view_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/card_view_image"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="@dimen/normal_text_size"
            tools:text="@string/dast_string_bilibili"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
